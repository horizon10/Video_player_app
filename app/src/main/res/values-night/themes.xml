<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Karanlık Tema (Dark Theme) -->
    <style name="Theme.KotlinVideo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Tema renkleri - karanlık temada daha yumuşak renkler -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarker</item>
        <item name="colorSecondary">@color/colorAccentDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>

        <!-- Card ve görünüm özellikleri -->
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>
